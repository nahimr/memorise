<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dut2.memorise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NeumorphicLight"
        android:fullBackupContent="true">
        <activity android:name=".splashscreen.SplashScreenActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" android:noHistory="false" android:screenOrientation="landscape"/>
        <activity android:name=".authentication.RegisterActivity" android:screenOrientation="landscape"/>
        <activity android:name=".authentication.LoginActivity" android:screenOrientation="landscape"/>
        <activity android:name=".game.GameOptionsActivity" android:screenOrientation="landscape"/>
        <activity android:name=".game.GameScreenActivity" android:screenOrientation="landscape"/>
    </application>

</manifest>