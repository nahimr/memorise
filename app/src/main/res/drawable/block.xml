<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <item android:id="@+id/btn_filled">
        <shape android:shape="oval">
            <solid android:color="?attr/color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">

            <gradient
                android:angle="-90"
                android:endColor="#00FFFFFF"
                android:startColor="#99FFFFFF"
                android:centerColor="#00ffffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" android:tintMode="screen">
            <gradient
                android:angle="90"
                android:endColor="#00FFFFFF"
                android:startColor="#80000000"
                android:centerColor="#00ffffff" />
        </shape>
    </item>
    <item android:drawable="@drawable/border_btn"/>
</layer-list>